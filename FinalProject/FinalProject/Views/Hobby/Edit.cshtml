@model Hobby
@{
    string title = ViewBag.Action + " Hobby";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="HobbyName">Name</label>
        <input asp-for="HobbyName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="HobbyDescription">Description</label>
        <input asp-for="HobbyDescription" class="form-control"/>
    </div>

    <input type="hidden" asp-for="HobbyId"/>

    <button type="submit">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn">Cancel</a>
</form>
